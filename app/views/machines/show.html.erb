<h1><%= @machine.location %> Vending Machine</h1>
<<ul>
  <% @machine.unique_snacks.each do |snack| %>
  <li id="snack-<%= snack.id %>"><%= snack.name %>: <%= number_to_currency(snack.price) %></li>
  <% end %>
  <% if @machine.snack_count > 0 %>
    <li>Average Price: <%= number_to_currency(@machine.average_price) %></li>
  <% end %>
</ul>